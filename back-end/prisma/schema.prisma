// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id               String    @id
  fullName         String
  email            String    @unique
  password         String
  phone            String
  registrationDate DateTime
  contacts         Contact[]
}

model Contact {
  id               String   @id
  fullName         String
  email            String   @unique
  phone            String
  registrationDate DateTime
  client           Client   @relation(fields: [clientId], references: [id])
  clientId         String
}
